<body>
    <h3>对不起，你没有权限！</h3>
    <span id="second">5</span>秒后<a href="#" onclick="backPage()">返回</a>!
    <script>
        var interval = 5;
        var timer = window.setInterval(backPage, 1000);    
        //定时器
        function backPage() {   
            if (interval == 1) {
                window.history.back();
                //去掉定时器
                window.clearTimeout(timer);
            }
            else
            {          
                interval--;
                document.getElementById("second").innerHTML = interval;
            }
        }    
    </script>
</body>
