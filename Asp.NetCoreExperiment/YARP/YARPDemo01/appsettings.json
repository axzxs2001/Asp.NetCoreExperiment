{
  "urls": "https://*:6001;http://*:6000",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Audience": {
    "Secret": "ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890",
    "Issuer": "gsw",
    "Audience": "everone"
  },
  "ReverseProxy": {
    "Routes": [
      {
        "RouteId": "route1",
        "ClusterId": "cluster1",
        "AuthorizationPolicy": "Permission",
        "Match": {
          //"Path": "{**catch-all}"
          "Path": "/sample"
        },
        "Transforms": [
          { "PathPattern": "/test" }
        ]
      }
    ],
    "Clusters": {
      "cluster1": {
        "LoadBalancing": {
          "Mode": "Random"
        },
        "Destinations": {
          "cluster1/destination1": {
            "Address": "https://localhost:7001/"
          },
          "cluster1/destination2": {
            "Address": "https://localhost:8001/"
          }
        }
      }      
    }
  }
}
